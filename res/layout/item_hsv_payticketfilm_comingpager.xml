<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="180dp"
    android:orientation="vertical" >
 
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_marginLeft="16dp">
	    
	    <!-- 上方日期文字和线 -->
	    <LinearLayout 
	        android:id="@+id/ll_item_hsv_payticket_comingpager"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
			android:gravity="center_vertical" >
			
		    <TextView 
		        android:id="@+id/tv_item_hsv_payticket_comingpager_toptime"
		        android:layout_width="wrap_content"
		        android:layout_height="20dp"
		        android:text="12月18号"
		        android:gravity="center_vertical"
		        android:textSize="14sp"
		        android:textColor="#9000"/>
		    <View
		        android:layout_width="match_parent"
		        android:layout_height="1dp"
		        android:background="#3000"
		        android:layout_marginLeft="10dp"
		        />
		</LinearLayout>
	    
	    <ImageView 
	        android:id="@+id/iv_item_hsv_payticket_comingpager_icon"
	        android:layout_width="90dp"
	        android:layout_height="140dp"
	        android:background="#eee"
	        android:layout_below="@id/ll_item_hsv_payticket_comingpager" 
	        android:layout_marginTop="8dp"/>
	    
	    <TextView 
	        android:id="@+id/tv_item_hsv_payticket_comingpager_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignTop="@id/iv_item_hsv_payticket_comingpager_icon"
	        android:layout_toRightOf="@id/iv_item_hsv_payticket_comingpager_icon"
	        android:layout_marginLeft="16dp"
	        android:text="万万没想到"
	        android:textSize="18sp"
	        android:textColor="#000"/>
		
	    <LinearLayout 
	        android:id="@+id/ll_item_hsv_payticket_comingpager_declare"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:orientation="horizontal"
	        android:layout_below="@id/tv_item_hsv_payticket_comingpager_title"
	        android:layout_alignLeft="@id/tv_item_hsv_payticket_comingpager_title"
	        android:layout_marginTop="4dp">
		    
	        <TextView 
	            android:id="@+id/tv_item_hsv_payticket_comingpager_people"
	            android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:text="2958"
	        	android:textSize="14sp"
	        	android:textColor="#fa8800" />
	        <TextView 
	            android:layout_width="wrap_content"
	        	android:layout_height="wrap_content" 
	        	android:text="人想看 - "
	        	android:textSize="14sp"
	        	android:textColor="#6000"/>
	        <TextView 
	            android:id="@+id/tv_item_hsv_payticket_comingpager_movietype"
	            android:layout_width="wrap_content"
	        	android:layout_height="wrap_content" 
	        	android:text="奇幻 | 喜剧 | 古装"
	        	android:lines="1"
	        	android:ellipsize="end"
	        	android:textSize="14sp"
	        	android:textColor="#6000"/>
	    </LinearLayout>
	    
	    <TextView 
	        android:id="@+id/tv_item_hsv_payticket_comingpager_director"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/ll_item_hsv_payticket_comingpager_declare"
	        android:layout_alignLeft="@id/ll_item_hsv_payticket_comingpager_declare"
	        android:layout_marginTop="4dp"
	        android:text="导演：易小星"
	        android:textSize="14sp"
	        android:textColor="#6000"/>
	    
	    <TextView 
	        android:id="@+id/tv_item_hsv_payticket_comingpager_actor"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/tv_item_hsv_payticket_comingpager_director"
	        android:layout_alignLeft="@id/tv_item_hsv_payticket_comingpager_director"
	        android:layout_marginTop="4dp"
	        android:text="演员：杨子珊、白客"
	        android:textSize="14sp"
	        android:textColor="#6000"/>
	    
	    <LinearLayout 
	        android:id="@+id/ll_item_hsv_payticket_comingpager_ll"
	        android:layout_width="190dp"
	        android:layout_height="36dp"
	        android:layout_alignBottom="@id/iv_item_hsv_payticket_comingpager_icon"
		    android:layout_toRightOf="@id/iv_item_hsv_payticket_comingpager_icon"
		    android:layout_marginLeft="8dp">	    
		    
		    <Button 
		        android:id="@+id/btn__item_hsv_payticket_comingpager_sell"
		        android:layout_width="92dp"
		        android:layout_height="36dp"
		        android:layout_marginLeft="8dp"
		        android:text="超前预售"
		        android:textSize="14sp"
		        android:textColor="#fff"
		        android:background="@drawable/bt_solid_green_66" />
		    
		    <Button 
		        android:id="@+id/btn__item_hsv_payticket_comingpager_pre"
		        android:layout_width="86dp"
		        android:layout_height="36dp"
		        android:layout_marginLeft="4dp"
		        android:text="预告片"
		        android:textSize="14sp"
		        android:textColor="#659d0e"
		        android:background="@drawable/actor_detail_unlike_background_on"
		        android:visibility="gone" />
	    </LinearLayout>
	    
	   	<View
	        android:id="@+id/v_item_hsv_payticket_comingpager_rightline"
		    android:layout_width="1dp"
		    android:layout_height="match_parent"
		    android:layout_toRightOf="@id/ll_item_hsv_payticket_comingpager_ll"
		    android:layout_marginLeft="16dp"
		    android:background="#3000"
		    android:layout_marginTop="10dp"
		    android:layout_marginBottom="10dp"/>
	    
	</RelativeLayout>
  

</LinearLayout>
