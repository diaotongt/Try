<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/ll_heardviwe"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/main_land"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/icon_find_mainland"
            android:gravity="center"
            android:padding="10dp"
            android:text="内地票房榜"
            android:textColor="#e87250" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#55000000" />

        <TextView
            android:id="@+id/globle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/icon_find_globle"
            android:gravity="center"
            android:padding="10dp"
            android:text="全球票房榜"
            android:textColor="#5683cc" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ll_heardviwe"
        android:background="#55000000" />

</RelativeLayout>