<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp" >

    <TextView
        android:id="@+id/tv_item_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/topmovie_list_numd"
        android:gravity="center" />

    <ImageView
        android:id="@+id/iv_item_icon"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/img_default" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_item_nameCn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="吉姆.帕森斯"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_item_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="#669e0e"
                android:text="9.4"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_nameEn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Jim Parsons"
            android:textColor="#66000000"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_item_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男,"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_item_birthDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3月24日"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_item_birthLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(美国德州休斯顿)"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:lines="2"
            android:ellipsize="end"
            android:text="年收入2900万美元"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>